---
// src/components/Footer.astro
import Link from 'astro:link'
import Image from 'astro:image'
import { SITE } from '../config/dag.config' // Asegúrate de tener este archivo

const currentYear = new Date().getFullYear()

// Opcional: Define aquí enlaces de redes sociales
const socialLinks = [
  { name: 'Facebook', href: 'https://facebook.com/dagklassical' },
  { name: 'Instagram', href: 'https://instagram.com/dagklassical' },
  { name: 'YouTube', href: 'https://youtube.com/dagklassical' },
  // Añade más según necesites
]

// Opcional: Define aquí enlaces rápidos
const quickLinks = [
  { name: 'Inicio', href: '/' },
  { name: 'Música', href: '/musica' },
  { name: 'Blockchain', href: '/blockchain' },
  { name: 'Noticias', href: '/noticias' },
  { name: 'Nosotros', href: '/nosotros' },
  { name: 'Contacto', href: '/contacto' },
];
---

<footer class="bg-dag-burgundy text-dag-white">
  <div class="container-max section-padding py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {/* Brand Section */}
      <div class="lg:col-span-2">
        <Link href="/" class="flex items-center space-x-3 group mb-6">
          <Image
            src="/images/logo-dagklassical-orig-001.svg" // Asegúrate de que el archivo exista en public/images/
            alt="DAG Klassical"
            width={54}
            height={54}
            class="opacity-90 group-hover:opacity-100 transition-opacity"
          />
          <div>
            <div class="text-2xl font-light text-dag-white tracking-wide">DAG</div>
            <div class="text-sm font-medium text-dag-platinum -mt-1">KLASSICAL</div>
          </div>
        </Link>
        <p class="text-dag-ivory mb-6 leading-relaxed max-w-md">
          Descubre la belleza y sofisticación de la música clásica contemporánea y tradicional.
          Conectando artistas y amantes de la música en todo el mundo.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              key={social.name}
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="footer-social-icon" // Usa la clase definida en globals.css con @apply
            >
              <!-- Icono SVG de la red social (ej: Facebook, Instagram) -->
              <!-- Puedes usar Lucide Astro o insertar SVG directamente -->
              <!-- Ejemplo con un ícono genérico -->
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
          ))}
        </div>
      </div>

      {/* Quick Links */}
      <div>
        <h3 class="text-lg font-semibold text-dag-platinum mb-4">Navegación</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li key={link.name}>
              <Link
                href={link.href}
                class="footer-link" // Usa la clase definida en globals.css con @apply
              >
                {link.name}
              </Link>
            </li>
          ))}
        </ul>
      </div>

      {/* Contact Info */}
      <div>
        <h3 class="text-lg font-semibold text-dag-platinum mb-4">Contacto</h3>
        <div class="space-y-3">
          <div class="flex items-center space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" strokeWidth="2" class="text-dag-platinum">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <span class="text-dag-ivory text-sm">contacto@dagklassical.com</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" strokeWidth="2" class="text-dag-platinum">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <span class="text-dag-ivory text-sm">+1 (555) 123-4567</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" strokeWidth="2" class="text-dag-platinum">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span class="text-dag-ivory text-sm">Mundo</span>
          </div>
        </div>
      </div>
    </div>

    {/* Bottom Section */}
    <div class="border-t border-dag-ivory/20 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-dag-ivory text-sm">
          &copy; {currentYear} DAGKLASSICAL.COM - Todos los derechos reservados
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <Link href="/privacidad" class="text-dag-ivory text-sm hover:text-dag-platinum transition-colors duration-300">
            Política de Privacidad
          </Link>
          <Link href="/terminos" class="text-dag-ivory text-sm hover:text-dag-platinum transition-colors duration-300">
            Términos de Uso
          </Link>
        </div>
      </div>
    </div>
  </div>
</footer>